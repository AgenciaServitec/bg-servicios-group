---
interface Props {
text: string,
  name: string,
  position: string,
  image: string
}

const {text, name, position, image} = Astro.props;
---

<article>
  <div class="w-[90%] mx-auto p-6 rounded-xl border border-gray-300 shadow-md font-sans">
    <div class="relative bg-blue-50 p-6 rounded-xl mb-8 italic text-gray-800">
      “{text}”
      <div class="absolute -bottom-4 left-8 w-0 h-0 border-l-[15px] border-l-transparent border-r-[15px] border-r-transparent border-t-[20px] border-t-blue-50"></div>
    </div>

    <div class="flex items-center gap-6">
      <img src={image} alt={`Foto de ${name}`} class="w-20 h-20 rounded-full object-cover border border-gray-300" />
      <div>
        <h3 class="text-lg font-semibold text-gray-900">{name}</h3>
        <p class="text-sm text-gray-600">{position}</p>
      </div>
    </div>
  </div>
</article>