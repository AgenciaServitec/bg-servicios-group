---
import { Icon } from "astro-icon/components";
interface Props {
  comment: string;
  name: string;
  icon: string;
}

const { comment, name, icon } = Astro.props;
---

<article>
  <div
    class="h-40 flex items-center relative bg-secondary-100 rounded-xl italic border border-secondary-200 p-4"
  >
    <p class="items-center">{comment}</p>
    <div
      class="w-8 h-5 absolute -bottom-3 left-8 bg-secondary-100 triangle z-50"
    >
    </div>
  </div>

  <div class="flex items-center gap-2 p-4">
    <Icon name={icon} size={65} class="text-muted" />
    <span class="text-lg font-semibold">{name}</span>
  </div>
</article>

<style>
  .triangle {
    clip-path: polygon(50% 100%, 0 0, 100% 0);
  }
</style>
