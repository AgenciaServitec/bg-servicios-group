---
import { Icon } from "astro-icon/components";
---

<div class="w-full flex flex-col gap-4 absolute -bottom-30 left-0">
  <div class="bg-background rounded-xl shadow-lg p-8">
    <h3 class="text-3xl font-museoModerno font-semibold mb-4">
      Programa tu cita
    </h3>
    <form class="h-0 overflow-hidden flex flex-col gap-4">
      <input
        type="text"
        placeholder="Nombres y apellidos"
        class="bg-gray-100 rounded-lg p-4"
      />
      <input
        type="email"
        placeholder="Correo"
        class="bg-gray-100 rounded-lg p-4"
      />
      <input type="date" class="bg-gray-100 rounded-lg p-4" />
      <button
        type="submit"
        class="flex gap-2 bg-gradient-to-r from-secondary-300 to-secondary-500 rounded-lg p-4 text-white font-semibold"
      >
        <Icon name="mdi:calendar" size={20} class="text-white" />
        <span>Reservar cita</span>
      </button>
    </form>
  </div>
  <a
    href="#"
    class="flex items-center gap-2 bg-gradient-to-r from-secondary-300 to-secondary-500 shadow-lg rounded-xl text-white px-8 py-4"
  >
    <div class="bg-background p-4 rounded-full">
      <Icon
        name="mdi:phone-outgoing-outline"
        size={40}
        class="text-secondary-500 hover:text-secondary-300"
      />
    </div>
    <div class="text-2xl">
      <h3 class="font-semibold font-museoModerno">Consultas Gratis</h3>
      <p>999 999 999</p>
    </div>
  </a>
</div>
