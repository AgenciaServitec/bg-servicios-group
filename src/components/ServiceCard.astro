---
interface Props {
title: string;
description: string;
image: string;
icon: string;
}

const {title, image, description, icon} = Astro.props;
---
<article>
  <div>
      <div
        class="relative h-72 rounded-xl overflow-hidden shadow-lg group"
        style={`background-image: url("${image}"); background-size: cover; background-position: center;`}
      >
        <div class="absolute bottom-0 left-0 bg-white bg-opacity-95 p-4 flex items-start gap-3 rounded-tr-lg w-[85%]">

          <img src="" alt="" class="w-10 h-10" />

          <div>
            <h3 class="text-lg font-semibold">{title}</h3>
            <p class="text-sm text-gray-600">{description}</p>
          </div>
        </div>
      </div>

  </div>
</article>