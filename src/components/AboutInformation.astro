---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div
  class="flex items-center gap-4 bg-gradient-to-r from-secondary-400 to-secondary-600 hover:from-orange-400 hover:to-orange-600 rounded-xl p-4 lg:p-6 text-white"
>
  <div
    class="w-18 h-18 flex justify-center items-center bg-background rounded-full p-4"
  >
    <Icon
      name={icon}
      size={45}
      class="text-secondary-500 hover:text-secondary-300"
    />
  </div>
  <div class="">
    <h3 class="text-xl lg:text-2xl font-semibold">{title}</h3>
    <p class="text-sm lg:text-base text-balance">
      {description}
    </p>
  </div>
</div>
